<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/PAC_BASE.css")

    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pops Animal Control", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Job Application", "Create", "Applicant")</li>@*Employee/Applicant Role*@
                    <li>@Html.ActionLink("MyHUB", "Index", "MyHUB")</li>@*Employee/Applicant Role*@
                    <li>@Html.ActionLink("HR HUB", "Index", "HumanResourcesHUB")</li>@*Human resourses Role*@
                    <li>@Html.ActionLink("Departments", "Index", "Department")</li>
                    <li>@Html.ActionLink("Poistions", "Index", "Position")</li>@*Management Role*@
                    <li>@Html.ActionLink("DogCatcher Enrollment", "Index", "DogCatcher")</li>@*Human resourses Role*@
                    <li>@Html.ActionLink("CatCatcher Enrollment", "Index", "CatCatcher")</li> @*Human resourses Role*@
                    <li>@Html.ActionLink("PokemonCatcher Enrollment", "Index", "PokemonCatcher")</li> @*Human resourses Role*@
                    <li>@Html.ActionLink("Dog Breeds", "Index", "DogBreed")</li> @*open Role*@
                    <li>@Html.ActionLink("Dogs", "Index", "Dog")</li> @*open Role*@
                    <li>@Html.ActionLink("Dog Reports", "Index", "DogReport")</li> @*open Role*@
                    <li>@Html.ActionLink("Cat Breeds", "Index", "CatBreed")</li> @*open Role*@
                    <li>@Html.ActionLink("Cats", "Index", "Cat")</li> @*open Role*@
                    <li>@Html.ActionLink("Cat Reports", "Index", "CatReport")</li> @*open Role*@
                    <li>@Html.ActionLink("Pokemon", "Index", "Pokemon")</li> @*open Role*@
                    <li>@Html.ActionLink("Pokemon Reports", "Index", "PokemonReport")</li> @*open Role*@
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
