            </div>
        </div>
    </div>

  

        <div style="border: 3px solid black; border-radius:10px;" class="_positions">
            <div class="panel-default ">
                <div class="panel-heading">
                    <h1 class="panel-title">Positions:</h1>
                </div>
                <div class="panel-body">
                    <ol>
                        @foreach (var item in Model.DogCatcherDepartments)
                        {
                            <li>@item.Name</li>
                        }
                    </ol>
                </div>
            </div>
        </div>
    
        <div style="border: 3px solid black; border-radius:10px;"class="_hireableApplicants">
            <h2 style="padding-left:10px"> Hireable Applicants:</h2>
            @foreach (var item in Model.DogCatcherApplicants)
            {
                @Html.Partial("_DogCatcherApplicants", item)
            }
        </div>
  



}
