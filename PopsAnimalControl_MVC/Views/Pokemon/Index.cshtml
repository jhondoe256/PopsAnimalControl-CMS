<h2>Rescued Pokemon:</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
@if (Model.Count() <= 0)
{
    <p>There are'nt any available Pokemon in the registry.</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PokemonBreedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PokemonBirthName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PokemonBreedName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PokemonBirthName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>

}